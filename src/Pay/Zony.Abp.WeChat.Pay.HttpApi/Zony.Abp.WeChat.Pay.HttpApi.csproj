<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netcoreapp2.2</TargetFramework>
        <RootNamespace>Zony.Abp.WeChat.Pay.HttpApi</RootNamespace>
    </PropertyGroup>

    <PropertyGroup>
        <Title>Zony.Abp.WeChat.Pay.HttpApi</Title>
        <Authors>Zony</Authors>
        <Description>定义了微信支付的消息回调接口，以及 JSSDK 需要的签名生成接口。</Description>
        <RepositoryType>git</RepositoryType>

        <PackageTags>wechat;wechat official;wechat pay;abp vnext;abp;asp.net core;.netcore;asp.net mvc</PackageTags>
        <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        <PackageProjectUrl>https://github.com/GameBelial/Zony.Abp.WeiXin</PackageProjectUrl>
